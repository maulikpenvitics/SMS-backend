@model WebUI.Models.OwnerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    (function () {
        $("form").validate();
    });
</script>

<div class="container" style="background-color: #f2edf3; padding: 10px; border-radius: 10px;">
    <div class="row">
        <div class="col-12 mb-3">
            <a href="@Url.Action("List", "Owner")" class="btn btn-success">Owner List</a>
        </div>
        <div class="col-12">
            @using (Html.BeginForm("Submit", "Owner", FormMethod.Post))
            {
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Block Name</label>
                                @Html.TextBoxFor(model => model.Blockname, new { @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(model => model.Blockname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Unit Name</label>
                                @Html.TextBoxFor(model => model.Unitname, new { @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(model => model.Unitname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.error))
                    {
                        <div class="text-danger">
                            @ViewBag.error
                        </div>
                    }

                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
