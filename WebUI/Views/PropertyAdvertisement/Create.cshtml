</div>
</div>
<div class="col-sm-4"><div class="form-group">
<label>Companyname</label>
@Html.TextBoxFor(model => model.Companyname, new { @class ="form-control" })
@Html.ValidationMessageFor(model => model.Companyname, null, new { @class = "error" }) 
</div>
</div>
<div class="col-sm-4"><div class="form-group">
<label>Advertisorfirstname</label>
@Html.TextBoxFor(model => model.Advertisorfirstname, new { @class ="form-control" })
@Html.ValidationMessageFor(model => model.Advertisorfirstname, null, new { @class = "error" }) 
</div>
</div>
<div class="col-sm-4"><div class="form-group">
<label>Advertisorlastname</label>
@Html.TextBoxFor(model => model.Advertisorlastname, new { @class ="form-control" })
@Html.ValidationMessageFor(model => model.Advertisorlastname, null, new { @class = "error" }) 
</div>
</div>
<div class="col-sm-4"><div class="form-group">
<label>Modifiedby</label>
@Html.TextBoxFor(model => model.Modifiedby, new { @class ="form-control" })
@Html.ValidationMessageFor(model => model.Modifiedby, null, new { @class = "error" }) 
</div>
</div>
<div class="col-sm-4"><div class="form-group">
<label>Modifieddate</label>
@Html.TextBoxFor(model => model.Modifieddate, new { @class ="form-control" })
@Html.ValidationMessageFor(model => model.Modifieddate, null, new { @class = "error" }) 
</div>
</div>

                    @if (ViewBag.error != "")
                    {
                        <div>
                            @ViewBag.error
                        </div>
                    }
                    </div>
                    
                    <div class="col-sm-12">
                     <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                   
                }
            </div>
        </div>
    </div>
 