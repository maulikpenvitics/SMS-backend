@model WebUI.Models.VendorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    (function () {
        $("form").validate();
    });
</script>

<div class="container" style="background-color: #f2edf3; padding: 20px; border-radius: 10px;">
    <div class="row">
        <div class="col-14 mb-3">
            <a href="@Url.Action("List","Vendor")" class="btn btn-success">Vendor List</a>
        </div>

        <div class="col-12">
            @using (Html.BeginForm("Submit", "Vendor", FormMethod.Post))
            {
                <div class="col-sm-18">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Firstname</label>
                                @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Firstname, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Lastname</label>
                                @Html.TextBoxFor(model => model.Lastname, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Lastname, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Company Name</label>
                                @Html.TextBoxFor(model => model.Companyname, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Companyname, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Address 1</label>
                                @Html.TextBoxFor(model => model.Address1, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Address1, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Address 2</label>
                                @Html.TextBoxFor(model => model.Address2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Address2, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>City</label>
                                @Html.DropDownListFor(model => model.Cityid, Model.DropdownCity, "Select City", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Cityid, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>State</label>
                                @Html.DropDownListFor(model => model.Stateid, Model.DropdownState, "Select State", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Stateid, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Country</label>
                                @Html.DropDownListFor(model => model.Countryid, Model.DropdownCountry, "Select Country", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Countryid, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        @*<div class="col-sm-3">
                            <div class="form-group">
                                <label>Modified By</label>
                                @Html.TextBoxFor(model => model.ModifiedBy, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ModifiedBy, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Modified Date</label>
                                @Html.TextBoxFor(model => model.ModifiedDate, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ModifiedDate, null, new { @class = "text-danger" })
                            </div>
                        </div>*@
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.error))
                    {
                        <div class="text-danger">
                            @ViewBag.error
                        </div>
                    }

                    <div class="col-sm-12 text-center mt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    
                </div>
            }
            </div>
        </div>
